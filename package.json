{
  "name": "awayjs-full",
  "version": "0.2.12",
  "description": "Complete monolitic build for all types of AwayJS projects",
  "main": "index.js",
  "scripts": {
    "rimraf": "rimraf",
    "webpack": "webpack",
    "clean": "npm cache clean && npm run rimraf -- node_modules bundles",
    "clean:bundles": "npm run rimraf -- bundles",
    "preclean:install": "npm run clean",
    "clean:install": "npm set progress=false && npm install",
    "preclean:start": "npm run clean",
    "clean:start": "npm start",
    "watch": "npm run watch:dev",
    "watch:dev": "npm run build:dev -- --watch",
    "watch:dev:hmr": "npm run watch:dev -- --hot",
    "watch:test": "npm run test -- --auto-watch --no-single-run",
    "watch:prod": "npm run build:prod -- --watch",
    "build": "npm run build:dev",
    "prebuild:dev": "npm run clean:bundles",
    "build:dev": "webpack --config webpack.config.js --progress --profile --colors --display-error-details --display-cached",
    "prebuild:prod": "npm run clean:bundles",
    "build:prod": "webpack --config webpack.config.js  --progress --profile --colors --display-error-details --display-cached --bail",
    "postbuild:prod": "uglifyjs ./bundles/index.js --output ./bundles/index.min.js --source-map ./bundles/index.min.js.map --in-source-map ./bundles/index.js.map --mangle",
    "version": "npm run build:prod",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awayjs/awayjs-full.git"
  },
  "keywords": [
    "AwayJS",
    "WebGL",
    "2D",
    "3D",
    "graphics"
  ],
  "author": "Rob Bateman",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/awayjs/awayjs-full/issues"
  },
  "homepage": "https://github.com/awayjs/awayjs-full#readme",
  "dependencies": {
    "@awayjs/core": "^0.6.0",
    "@awayjs/display": "^0.8.36",
    "@awayjs/stage": "^0.8.12",
    "@awayjs/renderer": "^0.8.26",
    "@awayjs/materials": "^0.3.20",
    "@awayjs/player": "^0.5.16",
    "@awayjs/parsers": "^0.5.31"
  },
  "devDependencies": {
    "compression-webpack-plugin": "^0.3.1",
    "rimraf": "^2.5.2",
    "typescript": "^1.9.0-dev.20160603-1.0",
    "uglifyjs": "^2.4.10",
    "webpack": "^1.12.15"
  }
}
